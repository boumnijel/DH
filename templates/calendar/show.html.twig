{% extends 'base.html.twig' %}

{% block title %}Calendar{% endblock %}

{% block body %}




<section id="content">
    <div class="container">
        <div class="block-header">
            <h1>Delete appointment</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ calendar.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ calendar.title }}</td>
            </tr>
            <tr>
                <th>Start</th>
                <td>{{ calendar.start ? calendar.start|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>End</th>
                <td>{{ calendar.end ? calendar.end|date('Y-m-d H:i:s') : '' }}</td>
            </tr>

            <tr>
                <th>All_day</th>
                <td>{{ calendar.allDay ? 'Yes' : 'No' }}</td>
            </tr>

        </tbody>
    </table>

            <div class="btn-demo" align="right">
                    <a class="btn btn-success waves-effect" href="{{ path('calendar_edit', {'id': calendar.id}) }}">Edit</a>
                <a class="btn btn-info waves-effect" href="{{ path('calendar_index') }}">back to list</a>

            </div>

        </div></div></section>
    {{ include('calendar/_delete_form.html.twig') }}
{% endblock %}
