{% extends 'base.html.twig' %}

{% block title %}Edit Calendar{% endblock %}

{% block body %}

<section id="content">
    <div class="container">
        <div class="block-header">
            <br>
            <h2><i class="zmdi zmdi-equalizer m-r-5"></i> Motives form </h2>
            <ul class="actions">
                <li>
                    <a href="">
                        <i class="zmdi zmdi-trending-up"></i>
                    </a>
                </li>
                <li>
                    <a href="">
                        <i class="zmdi zmdi-check-all"></i>
                    </a>
                </li>
                <li class="dropdown">
                    <a href="" data-toggle="dropdown">
                        <i class="zmdi zmdi-more-vert"></i>
                    </a>

                    <ul class="dropdown-menu dropdown-menu-right">
                        <li>
                            <a href="">Refresh</a>
                        </li>
                        <li>
                            <a href="">Manage Widgets</a>
                        </li>
                        <li>
                            <a href="">Widgets Settings</a>
                        </li>
                    </ul>
                </li>
            </ul>

        </div>



        <div class="fg-line">

            <h5>Making appointments</h5>
            <h5>Reason for consultation</h5>
            <div class="tv-header media">
                <a href="" class="tvh-user pull-left">
                    <img class="img-responsive" src="../../img/profile-pics/profile.png" alt="" style="width: 46px;">
                </a>
                <div class="media-body p-t-5">
                    <strong class="d-block">{{ calendar.title }} </strong>
                    <small class="c-gray">Date Time : {{ calendar.start ? calendar.start|date('Y-m-d H:i:s') : '' }}
                    </small>
                </div>

            </div>

            <div class="col-sm-12">
                <div class="fg-line">

                    <select id="pattern" name="pattern">
                        <option value="">Choice of pattern *</option>

                        <option value="Cough, cold, stuffy nose, stiffness, flu symptoms ...">Cough, cold, stuffy nose, stiffness, flu symptoms ...</option>
                        <option value="Respiratory problems">Respiratory problems</option>
                    </select>                             </div>
            </div>

            <div class="col-sm-12">      <br><br>

                <h5>Reason for consultation</h5>
                <p>Would you like a member of your team to accompany the patient in preparing for the teleconsultation?</p>
                <input type="radio" name="ch" id="ch" required value="Yes">yes<br>
                <input type="radio" name="ch" id="ch" required  value="No">no<br>

            </div>






        {{ include('calendar/_appform.html.twig', {'button_label': 'Validate'}) }}

        </div>

{% endblock %}
